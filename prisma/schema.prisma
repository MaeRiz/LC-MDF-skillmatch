generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}


model Freelance {
  id              Int           @id @default(autoincrement())
  nom             String
  email           String        @unique
  skills          String[]
  tjm             Int
}

model Entreprise {
  id              Int           @id @default(autoincrement())
  nom             String        @unique
  secteur         String
  projets         Projet[]
}

model Projet {
  id              Int          @id @default(autoincrement())
  titre           String
  description     String
  skillsRequis    String[]
  budgetMaxTjm    Int
  entrepriseId    Int
  entreprise      Entreprise    @relation(fields: [entrepriseId], references: [id])
  freelanceId     Int?
}

